{{#each _targetObject.modals.modalsInDom as |modal|}}

  {{!-- Overlay --}}

  {{#ember-modal-overlay
    class=modal.overlayClassName
    modal=modal
  }}

    {{!-- Modal content --}}

    {{component modal.componentName
      modal=modal
      targetObject=(if modal.context modal.context _targetObject)
    }}

  {{/ember-modal-overlay}}

{{/each}}

{{yield}}
